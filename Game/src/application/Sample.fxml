<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>

<BorderPane prefHeight="423.0" prefWidth="378.0" style="-fx-padding: 50;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SampleController">
   <top>
      <Label  styleClass="title" text="HotN'Cold" textAlignment="CENTER"  BorderPane.alignment="CENTER">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
   </top>
   <center>
      <VBox alignment="BOTTOM_CENTER" prefHeight="396.0" prefWidth="389.0" spacing="30.0" style="-fx-spacing: 25; -fx-background-color: inherit;" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#tutorialPage" styleClass="main-page-button" text="Tutorial" id="tutorial-button">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </Button>
            <Button mnemonicParsing="false" onAction="#highScorePage" styleClass="main-page-button" text="High Score" id="hs-button"/>
            <Button mnemonicParsing="false" onAction="#changeSettingsPage" styleClass="main-page-button" text="Settings" id="settings-button"/>
            <Button mnemonicParsing="false" onAction="#startGame" styleClass="main-page-button" text="Start" id="start-button" />
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
